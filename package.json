{
    "name": "root",
    "private": true,
    "devDependencies": {
        "@appnest/readme": "1.2.7",
        "@donmahallem/eslint-config": "1.0.88",
        "@donmahallem/rollup-config": "2.0.38",
        "@donmahallem/tslint-config": "0.3.2",
        "@nrwl/workspace": "14.1.9",
        "@rollup/plugin-commonjs": "22.0.0",
        "@rollup/plugin-json": "4.1.0",
        "@rollup/plugin-node-resolve": "13.3.0",
        "@rollup/plugin-replace": "4.0.0",
        "@rollup/plugin-typescript": "8.3.2",
        "@types/chai": "4.3.1",
        "@types/mocha": "9.1.1",
        "@types/node": "16.11.38",
        "@types/sinon": "10.0.11",
        "c8": "7.11.3",
        "chai": "4.3.6",
        "colors": "1.4.0",
        "commitizen": "4.2.4",
        "conventional-changelog-angular": "5.0.13",
        "conventional-changelog-cli": "2.2.2",
        "coveralls": "3.1.1",
        "cz-conventional-changelog": "3.3.0",
        "fs-extra": "10.1.0",
        "mocha": "10.0.0",
        "nx": "14.1.9",
        "nyc": "15.1.0",
        "rollup": "2.75.4",
        "rollup-plugin-dts": "4.2.2",
        "sinon": "14.0.0",
        "ts-node": "10.8.0",
        "tslib": "2.4.0",
        "tslint": "6.1.3",
        "typedoc": "0.22.17",
        "typescript": "4.7.2"
    },
    "scripts": {
        "build": "nx run-many --target=build --all",
        "build:readme": "npx @appnest/readme generate --input readme_blueprint.md --config readme_config.json --extend ./temp_readme.json",
        "test": "nx run-many --target=test --all",
        "test:coverage": "nx run-many --target=test:coverage --all",
        "coverage:merge": "node ./scripts/merge_coverage.js",
        "lint": "nx run-many --target=lint --all",
        "docs": "nx run-many --target=docs --all",
        "lint:fix": "nx run-many --target=lint:fix --all",
        "version": "npm run build:readme && git add README.md"
    },
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=8"
    },
    "workspaces": [
        "packages/*",
        "plugins/*",
        "helpers/*"
    ],
    "nyc": {
        "include": [
            "src/*.ts",
            "src/**/*.ts"
        ],
        "exclude": [
            "typings",
            "src/**/*.spec.ts",
            "**/*.d.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "json",
            "html",
            "text-summary",
            "lcov"
        ],
        "sourceMap": true,
        "instrument": true,
        "all": true
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
