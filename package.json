{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@appnest/readme": "1.2.7",
    "@donmahallem/eslint-config": "0.5.5",
    "@donmahallem/rollup-config": "1.0.1",
    "@donmahallem/tslint-config": "0.3.1",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-replace": "3.0.1",
    "@rollup/plugin-typescript": "8.3.0",
    "@types/chai": "4.3.0",
    "@types/mocha": "9.0.0",
    "@types/node": "16.11.19",
    "@types/sinon": "10.0.6",
    "c8": "7.11.0",
    "chai": "4.3.4",
    "commitizen": "4.2.4",
    "conventional-changelog-angular": "5.0.13",
    "coveralls": "3.1.1",
    "cz-conventional-changelog": "3.3.0",
    "fs-extra": "10.0.0",
    "lerna": "4.0.0",
    "mocha": "9.1.3",
    "nyc": "15.1.0",
    "rollup": "2.63.0",
    "rollup-plugin-dts": "4.1.0",
    "sinon": "12.0.1",
    "ts-node": "10.4.0",
    "tslib": "2.3.1",
    "tslint": "6.1.3",
    "typedoc": "0.22.10",
    "typescript": "4.5.4"
  },
  "scripts": {
    "build": "lerna run build",
    "build:readme": "npx @appnest/readme generate --input readme_blueprint.md --config readme_config.json --extend ./temp_readme.json",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "coverage:merge": "node ./scripts/merge_coverage.js",
    "lint": "lerna run lint",
    "docs": "lerna run docs",
    "lint:fix": "lerna run lint:fix",
    "version": "npm run build:readme && git add README.md"
  },
  "engines": {
    "node": ">=14.0.0 <17"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "src/**/*.spec.ts",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
