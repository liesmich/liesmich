{
    "name": "root",
    "private": true,
    "devDependencies": {
        "@appnest/readme": "1.2.7",
        "@donmahallem/eslint-config": "1.0.186",
        "@donmahallem/rollup-config": "2.0.97",
        "@donmahallem/tslint-config": "0.4.1",
        "@nrwl/workspace": "15.3.3",
        "@rollup/plugin-commonjs": "23.0.7",
        "@rollup/plugin-json": "5.0.2",
        "@rollup/plugin-node-resolve": "15.0.1",
        "@rollup/plugin-replace": "5.0.2",
        "@rollup/plugin-typescript": "9.0.2",
        "@types/chai": "4.3.4",
        "@types/mocha": "10.0.1",
        "@types/node": "18.11.17",
        "@types/sinon": "10.0.13",
        "c8": "7.12.0",
        "chai": "4.3.7",
        "colors": "1.4.0",
        "commitizen": "4.2.6",
        "conventional-changelog-angular": "5.0.13",
        "conventional-changelog-cli": "2.2.2",
        "coveralls": "3.1.1",
        "cz-conventional-changelog": "3.3.0",
        "fs-extra": "11.1.0",
        "mocha": "10.2.0",
        "nx": "15.3.3",
        "nyc": "15.1.0",
        "rollup": "2.79.1",
        "rollup-plugin-dts": "4.2.3",
        "sinon": "15.0.1",
        "ts-node": "10.9.1",
        "tslib": "2.4.1",
        "tslint": "6.1.3",
        "typedoc": "0.23.23",
        "typescript": "4.9.4"
    },
    "scripts": {
        "build": "nx run-many --target=build --all",
        "build:readme": "npx @appnest/readme generate --input readme_blueprint.md --config readme_config.json --extend ./temp_readme.json",
        "test": "nx run-many --target=test --all",
        "test:coverage": "nx run-many --target=test:coverage --all",
        "coverage:merge": "node ./scripts/merge_coverage.js",
        "lint": "nx run-many --target=lint --all",
        "docs": "nx run-many --target=docs --all",
        "lint:fix": "nx run-many --target=lint:fix --all",
        "version": "npm run build:readme && git add README.md"
    },
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=8"
    },
    "workspaces": [
        "packages/*",
        "plugins/*",
        "helpers/*"
    ],
    "nyc": {
        "include": [
            "src/*.ts",
            "src/**/*.ts"
        ],
        "exclude": [
            "typings",
            "src/**/*.spec.ts",
            "**/*.d.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "json",
            "html",
            "text-summary",
            "lcov"
        ],
        "sourceMap": true,
        "instrument": true,
        "all": true
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
